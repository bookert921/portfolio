{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "jsx": "preserve",
    "lib": ["dom", "es2015", "es2017"],
    "strict": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": false,
    "baseUrl": "src",
    "paths": {
      "@components/*": ["components/*"],
      "@hooks": ["hooks"],
      "@styles": ["styles"],
      "@types": ["types"]
    }
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", ".cache"]
}
